@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models
@{
	Layout = "PageWithShowcase.cshtml";
}

@await Html.PartialAsync("_BrandSection")

<section class="features">
    <div class="container">
        <div class="features-learn-more">
            <h6>Features</h6>
            <h3>@Model.Value("featuresTitle")</h3>
            <a href="@Model.Value("featuresButtonUrl")" class="button-yellow"><span>@Model.Value("featuresButtonText")</span><i class="fa-solid fa-arrow-trend-up"></i></a>
        </div>
        <div class="features-advice">
            @Html.GetBlockListHtml(Model.FeaturesContent)

        </div>
    </div>
</section>
    
@await Html.PartialAsync("_AboutCompanySection")

<!-- Our services section start-->
<section class="our-services">
    <div class="container">
        <h3>Our Services</h3>
        <h1>@Model.Value("ourServicesTitle")</h1>
        <div class="service-grid">
        @Html.GetBlockListHtml(Model.OurServiceContent)
        </div>
        <div class="service-button">
            <button class="button-transparent"><span>Browse Services</span><i class="fa-solid fa-arrow-trend-up"></i></button>
        </div>
    </div>
</section>
<!-- Our services section end-->

<!-- Why choose us section start-->
<section class="why-choose-us">
    <div class="background-rectangle"></div>
    <div class="container">
        <h3>Why choose us</h3>
        <div class="choose-us-grid">
            <div class="choose-us-content">
                <h2>@Model.Value("whyChooseUsTitle")</h2>
                @Html.GetBlockListHtml(Model.WhyChooseUsContent)

            </div>
            <div class="choose-us-image">
                @{
                    var whyChooseUsImage = Model.Value<MediaWithCrops>("WhyChooseUsImage");
                    if (whyChooseUsImage != null)
                    {
                        <img src="@whyChooseUsImage.MediaUrl()" alt=""/>
                    }
                }

            </div>
        </div>
    </div>
</section>
<!-- Why choose us section end-->
@await Html.PartialAsync("_ProjectAndCaseSection")
    <!-- Meet our team section start-->
    <section class="meet-our-staff">
        <div class="container">
            <div class="meet-our-staff-title">
                <h3>Meet Our Team</h3>
                <div>
                    <h2>@Model.Value("meetOurTeamTitle")</h2>
                    <a href="@Model.Value("meetOurTeamButtonUrl")" class="button-transparent"><span>@Model.Value("featuresButtonText")</span><i class="fa-solid fa-arrow-trend-up"></i></a>
                </div>
            </div>
            <div class="meet-our-staff-grid">
                @Html.GetBlockListHtml(Model.MeetOurTeamContent)
            </div>
            <div class="carousel-dots">
                <div class="carousel-dot"></div>
                <div class="carousel-dot active"></div>
                <div class="carousel-dot"></div>
                <div class="carousel-dot"></div>
                <div class="carousel-dot"></div>
            </div>
        </div>
    </section>
    <!-- Meet our team section end-->
@await Html.PartialAsync("_TestimonialSection")
@await Html.PartialAsync("_ArticlesAndNewsSection")
@await Html.PartialAsync("_NewsSignupSection")