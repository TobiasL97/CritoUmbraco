@using Crito.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var contactForm = new ContactForm();
}

    <section class="leave-us-a-message">
        <div class="container">
            <div class="leave-us-a-message-header">
                <h1>Leave us a message <br>for any information.</h1>
            </div>

        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {

            <div class="message-grid">
                <span class="error" asp-validation-for="@contactForm.Name"></span>
                <input asp-for="@contactForm.Name" type="text" placeholder="Name*">

                <span class="error" asp-validation-for="@contactForm.Email"></span>
                <input asp-for="@contactForm.Email" type="text" placeholder="Email*">

                <span class="error" asp-validation-for="@contactForm.Message"></span>
                <textarea asp-for="@contactForm.Message" placeholder="Your Message*"></textarea>
                <button class="button-yellow"><span>Send Message</span><i class="fa-solid fa-arrow-trend-up"></i></button>
            </div>
            
        }
        </div>
    </section>
